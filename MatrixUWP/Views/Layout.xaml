<Page
    x:Class="MatrixUWP.Views.Layout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MatrixUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ctl="using:MatrixUWP.Controls"
    xmlns:app="using:MatrixUWP.Models"
    mc:Ignorable="d"
    RequestedTheme="{x:Bind app:AppModel.AppConfiguration.AppThemeValue, Mode=OneWay}"
    Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}" Unloaded="Page_Unloaded" Loaded="Page_Loaded">

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{x:Bind NaviMenu.ExpandedModeThresholdWidth}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NaviMenu.PaneDisplayMode" Value="Top"/>
                        <Setter Target="NaviMenu.HeaderVisibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" x:Name="MyTitleBar">
            <Rectangle x:Name="BackgroundElement" Fill="Transparent" />
            <Grid Height="32">
                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Matrix UWP" />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <ctl:MyNavigationView CompactModeThresholdWidth="720" BackRequested="NaviMenu_BackRequested" x:Name="NaviMenu" AlwaysShowHeader="False" Header="{x:Bind ((NavigationViewItem)NaviMenu.SelectedItem).Content, Mode=OneWay}" IsBackEnabled="{x:Bind NaviContent.CanGoBack, Mode=OneWay}" ItemInvoked="NaviMenu_ItemInvoked">
                <ctl:MyNavigationView.MenuItems>
                    <NavigationViewItem x:Name="HomeNaviPage" Icon="Home" x:Uid="NaviMenu_Item_Home"></NavigationViewItem>
                    <NavigationViewItem x:Name="CourseNaviPage" Icon="Edit" x:Uid="NaviMenu_Item_Course" Visibility="{x:Bind viewModel.UserData.SignedIn, Mode=OneWay}"></NavigationViewItem>
                    <NavigationViewItem x:Name="LibraryNaviPage" Icon="Library" x:Uid="NaviMenu_Item_Library" Visibility="{x:Bind viewModel.UserData.SignedIn, Mode=OneWay}"></NavigationViewItem>
                    <NavigationViewItem x:Name="MessagesNaviPage" Icon="Message" x:Uid="NaviMenu_Item_Messages" Visibility="{x:Bind viewModel.UserData.SignedIn, Mode=OneWay}"></NavigationViewItem>
                    <NavigationViewItem x:Name="ProfileNaviPage" Icon="ContactInfo" x:Uid="NaviMenu_Item_Profile" Visibility="{x:Bind viewModel.UserData.SignedIn, Mode=OneWay}"></NavigationViewItem>
                    <NavigationViewItem x:Name="ManualNaviPage" Icon="Help" x:Uid="NaviMenu_Item_Manual"></NavigationViewItem>
                </ctl:MyNavigationView.MenuItems>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Frame VerticalContentAlignment="Stretch" x:Name="NaviContent" Navigated="NaviContent_Navigated"/>
                    <Border Visibility="{x:Bind viewModel.ShowMessage, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="50" Background="{ThemeResource SystemControlAccentAcrylicElementAccentMediumHighBrush}" Padding="15,5" Opacity="50" CornerRadius="2">
                        <TextBlock Foreground="White" Text="{x:Bind viewModel.Message, Mode=OneWay}"/>
                    </Border>
                </Grid>
            </ctl:MyNavigationView>
        </Grid>
    </Grid>
</Page>
